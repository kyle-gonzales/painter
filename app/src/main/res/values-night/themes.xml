<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Painter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/bone</item>
        <item name="colorOnPrimary">@color/onyx</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tan</item>
        <item name="colorSecondaryVariant">@color/bone</item>
        <item name="colorOnSecondary">@color/bronze</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackgroundFloating">?attr/colorOnPrimary</item>
        <item name="actionBarStyle">@style/DarkActionBar</item>
    </style>
    <style name="DarkActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/onyx</item>
    </style>
</resources>